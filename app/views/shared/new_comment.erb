        <input type="text" id="text" name="text" placeholder="Comment">
    </div>
    <input type="hidden" id="finstagram_post_id" name="finstagram_post_id" value="<%= post.id%>">
    <div class="form-type">
        <button class="button" type="submit">Submit</button>
    </div>
</form>